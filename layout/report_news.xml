<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">
 
        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:background="@drawable/actionbar_background"
                 android:orientation="horizontal"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <!-- Logo Start-->
                <ImageView android:src="@drawable/ic_contact_picture" 
                    android:scaleType="fitCenter"
                    android:id="@+id/lslogo"
                     android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dip"/>
                  
                <!-- Logo Ends -->
                  <Button android:id="@+id/btntake"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
               style="@style/ButtonAppTheme"
                android:text="Take Pictures"/>
        </LinearLayout>
        <!--  Header Ends -->
        <!-- Footer Start -->
        <LinearLayout android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="90dip"
              
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">
        </LinearLayout>
        <!-- Footer Ends -->
 
        <!-- register Form -->
        <LinearLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
          android:layout_below="@id/header">
          <!--  fname Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="News Title"/>
          <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:id="@+id/lsname"
                android:layout_marginBottom="20dip"
                
                android:singleLine="true"/>
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#372c24"
                android:text="Select News Category"/>
           <Spinner
        android:id="@+id/lscategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:prompt="@string/category_prompt" />
          
          <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
         >
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Select News Image"/>
          
          
          <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textColor="#372c24"
                android:text="Select More Images"/>
          
            </LinearLayout>
           <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
         >
          
               
          <Button android:id="@+id/btnbrowse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dip"
                android:paddingRight="10dp"
                android:layout_marginTop="10dip"
                style="@style/BlueButton"
                android:text="Browse"/>
          
          
           <Button android:id="@+id/btnmore"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
               
                android:layout_height="40dp"
                android:paddingLeft="10dip"
                android:paddingRight="10dp"
                android:layout_marginTop="10dip"
                style="@style/BlueButton"
                android:text="Browse"/>
          
          
          
          
          
        </LinearLayout>
          
          
         
        
         
            <!--   android:entries="@array/currency_arrays"android:prompt="@string/currency_prompt"-->
           
        
        
          
          <!--  android:entries="@array/country_arrays" -->
          
         
        
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Enter description"/>
          <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                 android:maxLines="4"
                android:layout_marginTop="5dip"
                android:id="@+id/lsdes"
                android:layout_marginBottom="20dip"
                />
        
              <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/messageoptionsborder"
      android:layout_gravity="center"
      android:layout_marginTop="5dp"
 android:orientation="horizontal"
       >
 
     <Button android:textStyle="bold" 
         android:layout_gravity="center" 
         android:id="@+id/btnvideo" 
         android:layout_width="fill_parent" 
         android:layout_height="50.0dip" 
         android:layout_marginLeft="12.0dip" 
         android:layout_marginTop="16.0dip" 
         android:paddingLeft="3dp"
         android:paddingRight="3dp"
         android:layout_marginRight="12.0dip" 
         android:layout_marginBottom="12.0dip" 
         android:text="Attach Video"
          style="@style/RedButton" />
               
    
    
     <Button android:textStyle="bold" 
         android:layout_gravity="center" 
         android:id="@+id/btnaudio" 
         android:layout_width="fill_parent" 
         android:layout_height="50.0dip" 
          android:paddingLeft="3dp"
         android:paddingRight="3dp"
         android:layout_marginLeft="12.0dip" 
         android:layout_marginTop="16.0dip" 
         android:layout_marginRight="12.0dip" 
         android:layout_marginBottom="12.0dip" 
         android:text="Attach Audio"
          style="@style/RedButton" />

   
    </LinearLayout>
     <View android:background="@color/divider_gray"   android:layout_marginTop="32.0dip" android:layout_width="fill_parent" android:layout_height="1.0px" />
   
          
          
          
          
          
          <!-- Login button -->
          <Button android:id="@+id/btnsub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
               style="@style/ButtonAppTheme"
                android:text="Send"/>
          <!-- Link to Registration Screen -->
          
 
        </LinearLayout>
        <!-- Login Form Ends -->
  </RelativeLayout>
</ScrollView>