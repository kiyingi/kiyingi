<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <ScrollView
 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
      <LinearLayout 
     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <LinearLayout android:id="@+id/lheader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_header_gradient"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <!-- Logo Start-->
                <ImageView 
                     android:id="@+id/image"
                     android:layout_marginLeft="10dip"
                     android:layout_width="100dp"
			        android:layout_height="70dp"
			        android:maxWidth="30dp"
			        android:maxHeight="30dp"
                            />
                 <Button android:id="@+id/videos"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                 style="@style/BlueButton"
                 android:padding="3dp"
                android:layout_height="60dp"
                android:text="Play Video"/>
                 
                  <Button android:id="@+id/audios"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                 style="@style/BlueButton"
                android:layout_height="60dp"
                android:padding="3dp"
                android:text="Listen to Audio"/>
                <!--  android:src="@drawable/l_logo"-->
                
                <!-- Logo Ends -->
        </LinearLayout>
     <TextView
         android:id="@+id/label1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:paddingTop="10dp"
         android:singleLine="true"
        
         android:layout_gravity="center"
         android:text="NEWS DETAILS"
         android:textSize="18dp"
         style="@style/Text"
         android:textStyle="bold" />
       <View android:background="@color/divider_gray" android:layout_width="fill_parent" android:layout_height="1.0px" />
  
     <TextView
         android:id="@+id/utitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:singleLine="true"
        style="@style/Text"
         android:layout_gravity="left"
         android:text="News Title"
         android:textSize="16dp"
         android:textStyle="bold" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        style="@style/Text"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
       
        android:layout_marginLeft="5dp" 
    />
 
     <TextView
     android:id="@+id/ldd"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
       android:layout_gravity="left"
     style="@style/Text"
     android:singleLine="true"
     android:text="New Description"
     
     android:textSize="16dp"
     android:textStyle="bold" />
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        style="@style/Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16dp"
        android:layout_marginLeft="5dp" 
    />
    
     <TextView
     android:id="@+id/ldp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
       android:layout_gravity="left"
       style="@style/Text"
     android:singleLine="true"
     android:text="Location"
     android:textSize="16dp"
     android:textStyle="bold" />
    
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        style="@style/Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
          android:layout_gravity="left"
        android:textSize="16dp"
        
        android:layout_marginLeft="5dp" 
    />

   <LinearLayout android:id="@+id/ll"
                android:layout_width="fill_parent"
                android:layout_height="70dip"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true">
               
                <Button android:id="@+id/btnok"
                android:layout_marginLeft="100dp"
                android:layout_width="100dp"
                 style="@style/BlueButton"
                android:layout_height="60dp"
                android:text="Done"/>
        </LinearLayout>
         </LinearLayout>
      

 </ScrollView>
    
</LinearLayout>
